.wrapper{
  font-size: 28rpx;
  padding: 0 32rpx 32rpx 32rpx;
  color: #3a3a3a;
}

.form{
  position: absolute;
  height: 100%;
  background-color: #fff;
}

.form-list{
  display: flex;
  align-items: center;
  margin: 60rpx 0;
}
.form-list .left{
  width: 80px;
}
.form-list .select{
  position: relative;
}
.form-list .select, .form-list .input{
  width: 344rpx;
  height: 76rpx;
  line-height: 76rpx;
  padding: 0 23rpx;
  background-color: #f5f5f5;
}
.form-list .select .icon{
  position: absolute;
  right: 23rpx;
  top: 4rpx;
}
.form-list .select .icon image{
  width: 27rpx;
  height: 27rpx;
}

.btn{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 92rpx;
  line-height: 92rpx;
  background-color: #3a3a3a;
  color: #fff;
  border-radius: 0;
  border-bottom: none;
  font-size: 28rpx;
}