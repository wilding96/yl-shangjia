.wrapper{
  font-size: 28rpx;
  padding: 0 32rpx 32rpx 32rpx;
  color: #3a3a3a;
}

.form{
  position: absolute;
  height: 100%;
  background-color: #fff;
}

.form-list{
  display: flex;
  align-items: center;
  margin: 60rpx 0;
}
.form-list .left{
  width: 80px;
}
.form-list radio .wx-radio-input {
  width: 24rpx;
  height: 24rpx;
}
.form-list .select{
  position: relative;
}
.form-list .select, .form-list .input{
  width: 344rpx;
  height: 76rpx;
  line-height: 76rpx;
  padding: 0 23rpx;
  background-color: #f5f5f5;
}
.form-list .select .icon{
  position: absolute;
  right: 23rpx;
  top: 4rpx;
}
.form-list .select .icon image{
  width: 27rpx;
  height: 27rpx;
}
.form-list .select .icon:after{
}
.form-list .right .upload{
  position: absolute;
  width: 160rpx;
  height: 160rpx;
  color: #b5b5b5;
  border: 1px dashed #b5b5b5;
  text-align: center;
  line-height: 160rpx;
  font-size: 40rpx;
  box-sizing: border-box;
}
.form-list .right span{
  color: #888;
}

.form-list.image
{
  display: flex;
  flex-wrap: wrap;
}
.form-list.image image{
  width: 100rpx;
  height: 100rpx;
  margin-right: 10rpx;
}

.btn{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 92rpx;
  line-height: 92rpx;
  background-color: #3a3a3a;
  color: #fff;
  border-radius: 0;
  border-bottom: none;
  font-size: 28rpx;
}

.imgArr {
  display: inline-block;
  width: 33%;
}

.imgArr image{
  width: 150rpx;
  height: 150rpx;
  margin-right: 10rpx;
}

.add {
  height: 200rpx;
}