.wrapper{
  font-size: 28rpx;
  padding: 0 32rpx 32rpx 32rpx;
  color: #3a3a3a;
}

.wrapper .button{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  border: 1px solid #D43C33;
  font-size: 28rpx;
  border-radius: 0;
  text-align: center;
  background-color: #D43C33;
}

.wrapper .list>view{
  padding: 16rpx 0;
  background-color: #fff;
  border-bottom: 1rpx solid #eae9e9;
  display: flex;
  align-items: center;
}
.wrapper .list>view label{
  width: 150rpx;
}
.wrapper .list>view textarea{
  padding: 10rpx 0;
  width: 100%;
  height: 100px;
}
.wrapper .list .default{
  display: flex;
  justify-content: space-between;
}