.search {
  width: 100%;
  min-height: 100%;
  background-color: #fff;
}

.search .s {
  position: fixed;
  top: 0;
  width: 94%;
  background: #f5f5f5;
  z-index: 2;
  padding: 10px 3%;
}

.search .s .s-wrap {
  position: relative;
  border-bottom: 1px solid #eee;
  background: #fff;
}

.search .s .s-wrap .sicon {
  width: 15px;
  margin-left: 15px;
  vertical-align: middle;
}

.search .s .s-wrap .bsearch {
  width: 15%;
  display: inline-block;
  height: 30px;
  vertical-align: top;
  line-height: 30px;
  background-color: #B34852;
  font-size: 12px;
  color: #fff;
  display: inline-block;
  text-align: center;
  position: absolute;
  right: 0;
}

.search .s .s-wrap .sinput {
  width: 87%;
  height: 30px;
  line-height: 30px;
  border: none;
  vertical-align: middle;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #999999;
  display: inline-block;
}

.search .s .s-wrap .searchbtn {
  position: absolute;
  right: 0;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #333333;
  background: none;
  border: none;
  top: 8px;
}

.search .noresult {
  font-family: PingFangSC-Light;
  font-size: 14px;
  color: #999999;
  text-align: center;
  padding: 125px 0;
}

.hot-words {
  padding: 52px 20px 20px;
}

.hot-words .subtitle {
  font-size: 13px;
  margin: 10px 0;
  color: #3a3a3a;
}

.hot-words .word {
  display: inline-block;
  margin-right: 10px;
  font-size: 12px;
  background: #eee;
  padding: 3px 10px;
  margin-bottom: 10px;
  color: #3a3a3a;
}

.product {
  width: 100%;
  padding-bottom: 40px;
  margin-top: 40px;
}

.product .lists {
  display: -webkit-box;
  margin: 0 20px;
}

.product .list {
  display: block;
  -webkit-box-flex: 1;
  width: 1%;
  vertical-align: top;
  padding: 10px 5px 0;
  border: 1px solid #fff;
  position: relative;
}

.product .list .imgs {
  position: relative;
  background-color: #f2f2f2;
}

.product .list .imgs .pimg {
  width: 100%;
  margin: 0 auto;
  display: block;
}

.product .list .title {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.product .list .title .t {
  font-family: PingFangSC-Regular;
  font-size: 15px;
  color: #333;
  line-height: 20px;
}

.product .list .subtitle {
  font-family: PingFangSC-Regular;
  font-size: 11px;
  color: #888;
  line-height: 16px;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  padding-bottom: 10px;
}

.product .list .price-info {
  font-family: PingFangSC-Medium;
  line-height: 20px;
}

.product .list .price-info .price {
  font-size: 16px;
  color: #333333;
}

.product .list .price-info .reward {
  font-size: 10px;
  color: #B34852;
}

