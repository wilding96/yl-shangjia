.shelvePanel {
  text-align: center;
}

.shelvePanel .title {
  font-family: PingFang-SC-Medium;
  font-size: 16px;
  color: #333333;
  padding-top: 15px;
}

.shelvePanel .text {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #666666;
  text-align: left;
  line-height: 25px;
  height: 25px;
  border: 1px solid #eee;
  -webkit-appearance: none;
  width: 92%;
  margin: 15px 0;
}

.shelvePanel .openbtn {
  display: block;
  height: 40px;
  line-height: 40px;
  background-color: #f5f5f5;
  text-align: center;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #333333;
  border: none;
  border-radius: 0 0 5px 5px;
}

.shelvePanel .d1 {
  height: 45px;
  line-height: 45px;
  border-bottom: 1px solid #eee;
  position: relative;
  text-align: left;
  margin-left: 15px;
  font-size: 14px;
  font-family: PingFangSC-Regular;
}

.shelvePanel .d1 text,.shelvePanel .d1 image {
  position: absolute;
  right: 16px;
}
.section {
  padding: 0 16px;
}
.shoptx {
  width: 100%;
  height: 35px;
  line-height: 35px;
  border-bottom: 1px solid #eee;
  font-size: 14px;
}
.btn {
  width: 100px;
  margin: 20px auto;
  font-size: 12px;
}
.avatar {
  width: 132px;
  height: 132px;
}