.noorder {
  text-align: center;
  color: #3a3a3a;
  margin-top: 30px;
}

.noorder img {
  width: 80px;
}

.liandou p {
  margin: 0;
}

.liandou .help {
  position: fixed;
  top: 15px;
  right: 0;
  height: 27px;
  line-height: 27px;
  background: #3A3A3A;
  border: 3px solid #c3c3c3;
  border-right: none;
  border-top-left-radius: 27px;
  border-bottom-left-radius: 27px;
  color: #fff;
  font-size: 12px;
  padding: 0 15px;
  z-index: 100;
}

.liandou .num {
  text-align: center;
  height: 120px;
  font-family: PingFang-SC-Medium;
  font-size: 13px;
  color: #3A3A3A;
  background: #fff;
  vertical-align: bottom;
  line-height: 120px;
}

.liandou .num .shu {
  font-family: GiorgioSans-Regular;
  font-size: 60px;
  color: #D43C33;
  vertical-align: bottom;
}

.liandou .c {
  background-color: #fff;
  margin-top: 10px;
  padding-left: 16px;
}

.liandou .c .timu {
  height: 45px;
  line-height: 45px;
  font-family: PingFang-SC-Medium;
  font-size: 14px;
  color: #3A3A3A;
  border-bottom: 1px solid #ececec;
}

.liandou .c .list {
  position: relative;
  background-color: #fff;
  min-height: 75px;
  border-bottom: 1px solid #ececec;
}

.liandou .c .list .left {
  padding: 15px 0;
  width: 75%;
}

.liandou .c .list .left .title {
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #4A4A4A;
  line-height: 25px;
  display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.liandou .c .list .left .time {
  font-family: PingFangSC-Light;
  font-size: 13px;
  color: #B5B5B5;
  line-height: 25px;
}

.liandou .c .list .right {
  position: absolute;
  right: 16px;
  top: 25px;
  font-family: PingFangSC-Medium;
  font-size: 16px;
  color: #3A3A3A;
}
.loading {
  text-align: center;
  font-size: 12px;
  color: #999;
}
