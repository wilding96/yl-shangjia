page{
  height: 100%;
  background-color: #f5f5f5;
}
.list{
  position: relative;
  height: 100%;
  font-size: 28rpx;
}
.list .header{
  position: fixed;
  width: 100%;
  display: flex;
  background-color: #fff;
  z-index: 999;
}
.list .header view{
  width: 50%;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  color: #888;
}
.list .header view.active{
  color: #d43c33;
  border-bottom: 2px solid #d43c33;
}
.list .container{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  padding: 80rpx 0 0 0;
}

.list .container .lists {
  border-bottom: 1px solid #ececec;
  background-color: #fff;
  padding: 20px 16px;
  display: block;
}
.list .container .lists .left {
  position: relative;
  display: inline-block;
}
.list .container .lists .left .pimg {
  width: 80px;
  height: 80px;
  display: inline-block;
}
.list .container .lists .left .state {
  position: absolute;
  top: 0;
  left: 0;
  font-size: 10px;
  background-color: #536dca;
  color: #fff;
  padding: 2px 5px;
}
.list .container .lists .p {
  display: inline-block;
  vertical-align: top;
  padding-left: 10px;
  width: 240px;
}
.list .container .lists .p p {
  margin: 0;
}
.list .container .lists .p .title {
  font-size: 14px;
  color: #3A3A3A;
  overflow: hidden;
  line-height: 20px;
}
.list .container .lists .p .qatitle {
  color: #536dca;
  font-size: 14px;
}
.list .container .lists .p .sku {
  font-size: 12px;
  color: #888888;
  margin-top: 10px;
}
.list .container .lists .p .sku .elink {
  width: 74px;
  height: 23px;
  line-height: 23px;
  display: inline-block;
  text-align: center;
  background: #D69867;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #FFFFFF;
  float: right;
}
.list .container .message{
  line-height: 100rpx;
  text-align: center;
  color: #999;
}
