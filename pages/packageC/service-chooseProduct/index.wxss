.cart {
  padding-bottom: 60px;
  background: #f5f5f5;
  min-height: 647px;
  margin-bottom: 50px;
}
.cart .shop {
  margin-bottom: 10px;
  background: #fff;
}
.cart .shop .product {
  min-height: 140px;
  background-color: #fff;
  padding: 0 16px;
  border-bottom: 1px solid #eee;
}
.cart .shop .product .p-detail {
  position: relative;
}
.cart .shop .product .p-detail .checkbtn {
  position: absolute;
  top: 61px;
}
.cart .shop .product .p-detail .plink {
  position: absolute;
  left: 23px;
  top: 22px;
}
.cart .shop .product .p-detail .plink .picture {
  width: 96px;
  height: 96px;
}
.cart .shop .product .p-detail .product-detail {
  width: 63%;
  margin-left: 5px;
  position: absolute;
  left: 120px;
  top: 22px;
}
.cart .shop .product .p-detail .product-detail .title {
  font-size: 14px;
  color: #3A3A3A;
  line-height: 20px;
  width: 90%;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.cart .shop .product .p-detail .product-detail .sku {
  font-size: 12px;
  color: #888888;
  margin-top: 5px;
}
.cart .shop .product .p-detail .product-detail .p-qu {
  font-size: 12px;
  color: #3A3A3A;
}
.cart .shop .product .p-detail .product-detail .p-qu .total_price {
  font-family: DINMittelschriftStd;
  font-size: 14px;
  color: #3A3A3A;
  margin-top: 15px;
}
.cart .fix-bottom {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 50px;
  z-index: 1002;
  line-height: 50px;
  background: #4A90E2;
  color: #fff;
  text-align: center;
}
