ul, ul li{
  display: block;
}
.payout {
  margin-bottom: 80px;
  background-color: #fff;
}
.payout .title {
  padding: 0 16px;
  height: 35px;
  line-height: 35px;
  font-family: PingFangSC-Regular;
  text-align: center;
}
.payout .u1 {
  list-style-type: none;
  padding: 0 16px;
  font-size: 13px;
}
.payout .u1 li {
  line-height: 25px;
}
.payout .tip {
  color: #D43C33;
  padding: 0 16px 50px;
  font-size: 14px;
}
.payout .fix-bottom {
  width: 100%;
  height: 50px;
  line-height: 50px;
  background-color: #4A90E2;
  font-size: 16px;
  color: #fff;
  text-align: center;
  position: fixed;
  bottom: 0;
  border: none;
  border-radius: 0;
  -webkit-appearance: none;
}
