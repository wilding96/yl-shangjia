.page .tishi {
  line-height: 25px;
  font-size: 13px;
  padding: 10px 16px;
  color: #fff;
  background-color: #4A90E2;
  margin-bottom: 10px;
  white-space: pre-wrap;
  max-height: 150px;
  overflow-y: scroll;
}
.page .subform {
  background-color: #fff;
  padding-bottom: 50px;
}
.page .imgs {
  margin: 0 16px;
  padding-bottom: 30px;
}
.page .imgs .tip {
  font-size: 16px;
  color: #3a3a3a;
  height: 30px;
  line-height: 30px;
}
.page .imgs .upimg {
  width: 107px;
  height: 107px;
  background: url('https://cdn.youlianyc.com/image/static/f0e3c7c3e0fa1d747fc9f4f078b50491.png') 0 0 no-repeat;
  background-size: 100%;
  display: inline-block;
  margin: 5px 1px;
  vertical-align: top;
  position: relative;
}
.page .imgs .upimg .close {
  position: absolute;
  background: url("https://cdn.youlianyc.com/image/static/f9127c781892a4c60b37211fcb5fad28.png") no-repeat;
  background-size: 100%;
  width: 12px;
  height: 12px;
  right: 0;
  top: 0;
  z-index: 10;
}
.page .imgs .upimg .uploadTip {
  height: 107px;
  width: 107px;
  line-height: 107px;
  background: #000;
  opacity: 0.8;
  color: #fff;
  text-align: center;
}
.page .imgs .upimg img {
  width: 107px;
  height: 107px;
}
.page .imgs .upimg .file {
  width: 107px;
  height: 107px;
  opacity: 0;
  position: absolute;
  top: 0;
}
.page .mgb {
  margin-bottom: 80px!important;
}
.page .refund {
  font-size: 14px;
  color: #3A3A3A;
  margin: 0 16px;
}
.page .refund .tf {
  font-size: 14px;
  font-family: PingFangSC-Regular;
  color: #3a3a3a;
  line-height: 25px;
  border-bottom: 1px solid #eee;
  padding: 15px 0;
}
.page .refund .text {
  padding-bottom: 10px;
}
.page .refund .tip {
  font-size: 12px;
  color: #999;
}
.page .refund .input-text {
  display: inline-block;
  font-size: 14px;
  color: #3a3a3a;
  width: 100%;
  padding: 15px 0;
}
.page .refund .input-text .cost {
  color: #888;
}
.page .refund .input-text .input {
  background-image: none;
  width: 92%;
  background: #f5f5f5;
  background-size: 24px;
  font-size: 13px;
  color: #3A3A3A;
  border-radius: 0;
  border: none;
  padding: 4%;
  -webkit-appearance: none;
  outline: none;
}
.page .submit {
  width: 100%;
  height: 50px;
  line-height: 50px;
  background-color: #4A90E2;
  font-size: 16px;
  color: #fff;
  text-align: center;
  position: fixed;
  bottom: 0;
  border: none;
  border-radius: 0;
  -webkit-appearance: none;
}

.uploadImage{
  margin-top: 20rpx;
  height:80rpx;
  line-height:80rpx;
  background-color:#e74e3d;
  color:#fff;
  text-align:center;
}

.uploaded-img{
  display: flex;
  flex-wrap: wrap
}

.uploaded-img image{
  width: 160rpx;
  height: 160rpx;
  margin: 10rpx 3rpx;
  border: 1px solid #eee;
}